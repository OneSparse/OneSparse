-- # Scalar `float4` Operations
--
-- Test various scalar math operations with native Postgres types
select (1::float4)::scalar + -1::float4;
  ?column?   
-------------
 f4:0.000000
(1 row)

select 1::float4 + (-1::float4)::scalar;
 ?column? 
----------
        0
(1 row)

select (1::float4)::scalar - 1::float4;
  ?column?   
-------------
 f4:0.000000
(1 row)

select 1::float4 - (1::float4)::scalar;
 ?column? 
----------
        0
(1 row)

select (1::float4)::scalar * -1::float4;
   ?column?   
--------------
 f4:-1.000000
(1 row)

select 1::float4 * (-1::float4)::scalar;
 ?column? 
----------
       -1
(1 row)

select (1::float4)::scalar / 1::float4;
  ?column?   
-------------
 f4:1.000000
(1 row)

select 1::float4 / (1::float4)::scalar;
